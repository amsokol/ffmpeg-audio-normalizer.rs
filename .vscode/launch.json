    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ffmpeg-audio-normalizer",
                    "--package=ffmpeg-audio-normalizer"
                ],
                "filter": {
                    "name": "ffmpeg-audio-normalizer",
                    "kind": "bin"
                }
            },
            "args": [
                "-i",
                "./test/audio.ac3",
                "-o",
                "./test/audio.debug.ac3",
                "--verbose",
                "ebu",
                "--",
                "-dialnorm",
                "-31"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ffmpeg-audio-normalizer",
                    "--package=ffmpeg-audio-normalizer"
                ],
                "filter": {
                    "name": "ffmpeg-audio-normalizer",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}